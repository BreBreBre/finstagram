    <header class="head">
               <h1> Finstagram! </h1>
           </header>
           
           <main role="main">
               <% @posts.each do |post| %> 
               
               
               <article class="post"> 
                   <div class="user-info">
                        <img class="icon" src="<%= post[:avatar_url] %>" alt="<%= post[:username] %>"> 
                           <h2> <%= post[:username] %> </h2> 
                               <h3> <%= post[:humanized_time_ago] %> </h3>
                       </div> 

                    <a class="photo" href="#">
                       <img class="userphoto" src="<%= post[:photo_url] %>" alt="post from <%= post[:username] %>"> 
                      </a>
                        <div class="actions">
                            <%= post[:like_count] %> likes 
                            <span class="comment-count"><%= post[:comment_count]  %> comment </span>
                        </div>
                        
                        <ul class="comments">
                            <li> 
                                <p>
                                  <%= post[:comments][0][:username] %>: <%= post[:comments][0][:text] %>
                                </p>
                            
                            </li>
                        </ul>
                         </article> 
                         <% end %> 
                         </main> 
                         
                         